#!/usr/bin/env node

const fs = require('fs')
const path = require('path')

const context = path.dirname(__dirname)
const babelrcPath = require.resolve(path.join(context, '.babelrc'))
const babelrc = JSON.parse(fs.readFileSync(babelrcPath))

require('@babel/register')(Object.assign(babelrc, {
  cwd: context,
  // cache: false,
  // ignore: null // 编译所有的文件，包含 node_modules
}))

const Command = require('..')

new Command().start()
